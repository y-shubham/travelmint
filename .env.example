# Server
PORT=8000
NODE_ENV_CUSTOM=development

# URLs
BASE_URL=http://localhost:5173
API_URL=http://localhost:8000

# Database
# Format: mongodb+srv://<username>:<password>@<cluster>/<database>
MONGO_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>

# JWT
JWT_SECRET=<generate_a_random_secret>
JWT_EMAIL_SECRET=<generate_a_random_secret>
JWT_RESET_SECRET=<generate_a_random_secret>

# SMTP (Gmail App Password or other provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=<your_email@example.com>
SMTP_PASS=<your_app_password>

# Razorpay
RAZORPAY_KEY_ID=<your_razorpay_key_id>
RAZORPAY_KEY_SECRET=<your_razorpay_key_secret>
RAZORPAY_WEBHOOK_SECRET=<your_webhook_secret>
